<Window x:Class="WpfApplication1.WortChillerSanitizedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Counter flow chiller sanitation" Height="300" Width="300">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="20,20,20,0" TextWrapping="Wrap" Text="Boil done. Power will remain 100% until counter flow chiller is sanitized. Press &quot;Done&quot; when so." VerticalAlignment="Top" Height="140"/>
        <Button x:Name="button" Content="Done" HorizontalAlignment="Center" Margin="0,0,0,20" VerticalAlignment="Bottom" Width="75" Click="button_Click"/>

    </Grid>
</Window>
