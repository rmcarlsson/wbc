<Window x:Class="WpfApplication1.StrikeWaterReachedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Strike water reached" Height="300" Width="300">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="20,20,20,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="110"><Run Text="Strike water reached. Please add grains."/><LineBreak/><Run/><LineBreak/><Run Text="Click &quot;start mashing&quot; button when done."/></TextBlock>
        <Button x:Name="StartMashinButton" Content="Start mashing" HorizontalAlignment="Center" Margin="0,0,0,20" VerticalAlignment="Bottom" Width="83" Click="StartMashinButton_Click"/>

    </Grid>
</Window>
