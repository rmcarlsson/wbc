<Window x:Class="GFCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GFCalc"
        mc:Ignorable="d"
        Title="Grainfather " Height="748.334" Width="1038.333">
    <Grid>
        <Menu Margin="0,0,0,693" >
            <MenuItem Header="_File">
                <MenuItem Header="_Open"/>
                <MenuItem Header="_Close"/>
                <MenuItem Header="_Save"/>
            </MenuItem>
        </Menu>
        <Label x:Name="label" Content="Mash" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.684,0.128"/>
        <Button x:Name="addGrains" Content="Add" HorizontalAlignment="Left" Margin="453,72,0,0" VerticalAlignment="Top" Width="75" Click="addGrains_Click"/>
        <ListView x:Name="MaltsListView" PreviewKeyDown="listView_KeyDown" HorizontalAlignment="Left" Height="121" Margin="10,71,0,0" VerticalAlignment="Top" Width="328" MouseDoubleClick="MaltsListView_MouseDoubleClick">
            <ListView.View >
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=FermentableAdjunct.Name}"  Header="Fermentable" />
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Amount}"  Header="Share [%]" />
                    <GridViewColumn DisplayMemberBinding="{Binding Path=AmountKg}"  Header="Amount [kg]" />
                </GridView>
            </ListView.View>

        </ListView>
        <Label x:Name="label2" Content="Expected original gravity [SG]" HorizontalAlignment="Left" Margin="676,95,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ExpectedOriginalGravityTextBox" HorizontalAlignment="Left" Height="23" Margin="846,99,0,0" TextWrapping="Wrap" Text="1,050" VerticalAlignment="Top" Width="61" TextChanged="ExpectedOriginalGravityTextBox_TextChanged" />
        <ListView x:Name="HopsListView" HorizontalAlignment="Left" Height="100" Margin="10,264,0,0" VerticalAlignment="Top" Width="328" MouseDoubleClick="HopsListView_MouseDoubleClick" >
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Hop.Name}"  Header="Hops" />
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Hop.AlphaAcid}"  Header="Alpha acid[%]" />
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Amount}"  Header="Amount [g/L]" />

                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="button" Content="Add" HorizontalAlignment="Left" Margin="453,264,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Label x:Name="IbuLabel" Content="IBU: 0" HorizontalAlignment="Left" Margin="242,338,0,0" VerticalAlignment="Top" Width="121"/>
        <Label x:Name="label3" Content="Batch size [L]:" HorizontalAlignment="Left" Margin="676,66,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.526,0.269"/>
        <TextBox x:Name="BatchSizeVolumeTextBox" HorizontalAlignment="Left" Height="23" Margin="846,71,0,0" TextWrapping="Wrap" Text="25" VerticalAlignment="Top" Width="61" TextChanged="BatchSizeVolumeTextBox_TextChanged"/>
    </Grid>
</Window>
