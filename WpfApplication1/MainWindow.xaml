<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Grainfather " Height="748.334" Width="1038.333">
    <Grid>
        <Menu Margin="0,0,0,693" >
            <MenuItem Header="_File">
                <MenuItem Header="_Open"/>
                <MenuItem Header="_Close"/>
                <MenuItem Header="_Save"/>
            </MenuItem>
        </Menu>
        <Label x:Name="label" Content="Mash" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.684,0.128"/>
        <Button x:Name="addGrains" Content="Add" HorizontalAlignment="Left" Margin="548,71,0,0" VerticalAlignment="Top" Width="75" Click="addGrains_Click"/>
        <ListView x:Name="listView" PreviewKeyDown="listView_KeyDown" HorizontalAlignment="Left" Height="208" Margin="10,71,0,0" VerticalAlignment="Top" Width="533">
            <ListView.View >
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=GristName}"  Header="Fermetable" />
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Share}"  Header="Share [%]" />
                </GridView>
            </ListView.View>

        </ListView>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBox x:Name="grainBillTextBox"  HorizontalAlignment="Left" Height="23"  TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="61" RenderTransformOrigin="0.633,2.696" Margin="799,42,0,0" TextChanged="grainBillTextBox_TextChanged" MouseLeave="grainBillTextBox_MouseLeave"/>
        <Label x:Name="label1" Content="Grain bill size [kg]:" HorizontalAlignment="Left" Margin="676,40,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelTotalMashVolume" Content="Total mash volume [L]: 0L" HorizontalAlignment="Left" Margin="670,71,0,0" VerticalAlignment="Top" Width="155"/>
    </Grid>
</Window>
