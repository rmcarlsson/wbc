<Window x:Class="WpfApplication1.StopBrewingProcessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="StopBrewingProcessWindow" Height="300" Width="300">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="20,20,20,0" TextWrapping="Wrap" Text="Are you sure you want to abort the brewing process?" VerticalAlignment="Top" Height="99"/>
        <Button x:Name="AbortButton" Content="Abort" HorizontalAlignment="Right" Margin="0,0,110,20" VerticalAlignment="Bottom" Width="75" Click="AbortButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,20,20" VerticalAlignment="Bottom" Width="75" Click="CancelButton_Click"/>

    </Grid>
</Window>
