<Window x:Class="WpfApplication1.SelectHops"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Select hops for Boil, type and amount" Height="178.322" Width="416.057">
    <Grid>
        <ComboBox x:Name="comboBox" DisplayMemberPath="Name" HorizontalAlignment="Left" Margin="25,48,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label" Content="Hops" HorizontalAlignment="Left" Margin="25,17,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.283,0.115"/>
        <Button x:Name="Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="276,117,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Button x:Name="Done" Content="Done" HorizontalAlignment="Left" Margin="196,117,0,0" VerticalAlignment="Top" Width="75" Click="button1_Click"/>
        <Label x:Name="label1" Content="Amount [g/L] :" HorizontalAlignment="Left" Margin="180,13,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="AmountTextBox" HorizontalAlignment="Left" Height="23" Margin="323,20,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="75"/>
        <Label x:Name="label2" Content="Time [m from boil end] :" HorizontalAlignment="Left" Margin="180,44,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TimeTextBox" HorizontalAlignment="Left" Height="23" Margin="323,48,0,0" TextWrapping="Wrap" Text="90" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
