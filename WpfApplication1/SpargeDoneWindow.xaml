<Window x:Class="WpfApplication1.SpargeDoneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Sparge done" Height="300" Width="300">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="20,20,20,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="133" ><Run Text="Mashing done. Please sparge."/><LineBreak/><Run/><LineBreak/><Run Text="Click &quot;Sparge done&quot; when sparge is complete."/></TextBlock>
        <Button x:Name="SpargeDoneButton" Content="Sparge done" HorizontalAlignment="Center" Margin="0,0,0,20" VerticalAlignment="Bottom" Width="75" Click="SpargeDoneButton_Click"/>

    </Grid>
</Window>
