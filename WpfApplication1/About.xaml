<Window x:Class="WpfApplication1.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="About" Height="300" Width="300">
    <Grid>
        <Button x:Name="button" Content="OK" HorizontalAlignment="Left" Margin="110,240,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="207" Margin="10,10,10,10" TextWrapping="Wrap" Text="Grainsim is a simple tool for receipe creation for Grainfather. &#xA;&#xA;If you want to contribute please contact rmcarlsson@gmail.com.&#xA;" VerticalAlignment="Top" Width="274"/>
        <Button x:Name="donateButton" Content="Donate" HorizontalAlignment="Left" Margin="110,136,0,0" VerticalAlignment="Top" Width="75" Click="donateButton_Click"/>

    </Grid>
</Window>
